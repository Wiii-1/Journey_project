            VerticalOptions="Center"
            Spacing="10">

            <VerticalStackLayout
                Padding="30,0"
                Spacing="25">

                <ImageButton
                    x:Name="Img1"
                    Source="Phase2withoutcontrast.png" 
                    Clicked="OnClicked1" />

                <Label
                    x:Name="Lbl1"
                    Text="Expectation" />
            </VerticalStackLayout>

            <VerticalStackLayout
                Padding="30,0"
                Spacing="25">

                <ImageButton
                    x:Name="Img2"
                    Source="Altered5.png"
                    Clicked="OnClicked2" />

                <Label
                    x:Name="Lbl2"
                    Text="Expectation" />
            </VerticalStackLayout>

        </HorizontalStackLayout>
    </ScrollView>
</ContentPage>
